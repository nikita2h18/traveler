generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  login    String    @unique
  password String
  profile  Profile?
}

model Profile {
  id       BigInt   @id @default(autoincrement())
  name     String
  lastname String
  birthday DateTime
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
}
