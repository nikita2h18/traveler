generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  login        String         @unique
  password     String
  profile      Profile?
  subscriber   Subscriber[]
  travel       Travel[]
  notification Notification[]
}

model Profile {
  id       Int      @id @default(autoincrement())
  name     String
  lastname String
  birthday DateTime
  userId   Int      @unique
  user     User     @relation(fields: [userId], references: [id])
}

model Travel {
  id          Int       @id @default(autoincrement())
  description String
  pointFrom   String
  pointTo     String
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  comment     Comment[]
  like        Like[]
}

model Like {
  travelId Int
  userId   Int?
  id       Int    @id @default(autoincrement())
  travel   Travel @relation(fields: [travelId], references: [id])
}

model Comment {
  id       Int    @id @default(autoincrement())
  message  String
  travelId Int
  userid   Int
  Travel   Travel @relation(fields: [travelId], references: [id])
}

model Subscriber {
  id           Int  @id @default(autoincrement())
  subscriberId Int
  userId       Int
  user         User @relation(fields: [userId], references: [id])
}

model Notification {
  id         Int     @id @default(autoincrement())
  isSeen Boolean @default(false)
  userId     Int?
  user       User?   @relation(fields: [userId], references: [id])
}
